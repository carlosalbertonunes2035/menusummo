rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Fun√ß√£o Auxiliar ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // ==================================================
    // üß† IMPORTA√á√ÉO INTELIGENTE (SUMMO AI)
    // ==================================================
    // Permite upload de PDFs/Fotos para a pasta de importa√ß√£o
    match /imports/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }

    // ==================================================
    // üåç ASSETS P√öBLICOS (Card√°pio Digital / iFood)
    // ==================================================
    // Qualquer pessoa (mesmo sem logar) pode VER as fotos (read: if true)
    // Apenas usu√°rios logados podem SUBIR/APAGAR as fotos (write: if isAuthenticated)
    
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /stories/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /branding/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ==================================================
    // üîí SEGURAN√áA FINAL
    // ==================================================
    // Bloqueia qualquer outra pasta que n√£o foi listada acima
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
