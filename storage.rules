rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    function isValidMediaType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('video/.*');
    }

    // Secure multi-tenant upload paths
    match /tenants/{tenantId}/{allPaths=**} {
      allow read: if true; // Public view for menu media
      allow write: if isAuthenticated() && 
                    get(/databases/(default)/documents/users/$(request.auth.uid)).data.tenantId == tenantId &&
                    isValidSize() && isValidMediaType();
    }

    // Compatibility paths (read-only)
    match /products/{allPaths=**} { allow read: if true; }
    match /stories/{allPaths=**} { allow read: if true; }
    match /branding/{allPaths=**} { allow read: if true; }
  }
}
