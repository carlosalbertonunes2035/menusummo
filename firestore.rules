rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Fun√ß√£o para verificar se est√° logado
    function isAuthenticated() {
      return request.auth != null;
    }

    // ============================================================================
    // üåê COLE√á√ïES RA√çZES (Usadas pelo App principal / hooks.ts)
    // ============================================================================
    // O App usa "collection(db, 'products')" filtrando por tenantId.
    // Portanto, precisamos de regras na raiz.
    
    match /products/{id} { allow read, write: if isAuthenticated(); }
    match /ingredients/{id} { allow read, write: if isAuthenticated(); }
    match /recipes/{id} { allow read, write: if isAuthenticated(); }
    match /orders/{id} { allow read, write: if isAuthenticated(); }
    match /option_groups/{id} { allow read, write: if isAuthenticated(); }
    match /coupons/{id} { allow read, write: if isAuthenticated(); }
    match /customers/{id} { allow read, write: if isAuthenticated(); }
    match /expenses/{id} { allow read, write: if isAuthenticated(); }
    match /settings/{id} { allow read, write: if isAuthenticated(); }
    match /print_jobs/{id} { allow read, write: if isAuthenticated(); }

    // ============================================================================
    // üè¢ TENANTS & IMPORTA√á√ÉO (Usado pelo useMenuImport.ts)
    // ============================================================================
    match /tenants/{tenantId} {
      match /roles/{roleId} { allow read, write: if isAuthenticated(); }
      match /import_jobs/{jobId} {
        allow create: if isAuthenticated();
        allow read: if isAuthenticated();
        allow update: if false; 
        allow delete: if isAuthenticated();
      }
    }

    // ============================================================================
    // üë§ REGRAS DE USU√ÅRIO
    // ============================================================================
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /system_users/{userId} {
      allow read, write: if isAuthenticated();
    }

    // Bloqueia todo o resto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
