rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Fun√ß√£o para verificar se est√° logado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Fun√ß√£o para verificar se o documento pertence ao tenant do usu√°rio
    function belongsToTenant() {
      return request.auth != null && 
             (request.auth.token.tenantId == resource.data.tenantId ||
              request.auth.token.uid == resource.data.tenantId || // Fallback UID matches tenantId (bootstrap)
              request.auth.uid == resource.data.ownerUid); // NEW: Fallback ownerUid
    }

    // Fun√ß√£o para verificar se pode criar documento para o tenant
    function canCreateForTenant() {
      return request.auth != null && 
             request.resource.data.ownerUid != null && 
             (request.auth.token.tenantId == request.resource.data.tenantId ||
              request.auth.token.uid == request.resource.data.tenantId || 
              request.auth.uid == request.resource.data.ownerUid); 
    }


    // ============================================================================
    // üåê COLE√á√ïES RA√çZES (Usadas pelo App principal / hooks.ts)
    // ============================================================================
    // O App usa "collection(db, 'products')" filtrando por tenantId.
    // Portanto, precisamos de regras na raiz.
    
    match /products/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /ingredients/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /recipes/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /orders/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /option_groups/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /coupons/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /customers/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /expenses/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }
    match /settings/{id} { 
      allow get: if true; // Public access to check slug uniqueness (collision detection)
      allow list: if belongsToTenant();
      allow create: if false; // Creation strictly managed by Cloud Functions (Admin SDK)
      allow update, delete: if belongsToTenant();
    }
    match /print_jobs/{id} { 
      allow read: if belongsToTenant();
      allow create: if canCreateForTenant();
      allow update, delete: if belongsToTenant();
    }

    // ============================================================================
    // üè¢ TENANTS & IMPORTA√á√ÉO (Usado pelo useMenuImport.ts)
    // ============================================================================
    match /tenants/{tenantId} {
      match /roles/{roleId} { allow read, write: if isAuthenticated(); }
      match /import_jobs/{jobId} {
        allow create: if isAuthenticated();
        allow read: if isAuthenticated();
        allow update: if false; 
        allow delete: if isAuthenticated();
      }
    }

    // ============================================================================
    // üë§ REGRAS DE USU√ÅRIO
    // ============================================================================
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /system_users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId; // üõ°Ô∏è SECURITY PATCH
    }

    match /audit_logs/{logId} {
      allow create: if isAuthenticated();
      allow read: if belongsToTenant();
    }

    // Bloqueia todo o resto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
