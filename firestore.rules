rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Fun√ß√£o para verificar se est√° logado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Regras para a cole√ß√£o de Tenants (Seus clientes)
    match /tenants/{tenantId} {
      
      // ==================================================
      // üß† IMPORTA√á√ÉO INTELIGENTE (Onde est√° o erro)
      // ==================================================
      // Precisamos liberar a CRIA√á√ÉO na cole√ß√£o 'import_jobs'
      match /import_jobs/{jobId} {
        allow create: if isAuthenticated(); // <--- ISSO CONSERTA O ERRO
        allow read: if isAuthenticated();   // <--- ISSO PERMITE VER A BARRA DE PROGRESSO
        allow update: if false; // S√≥ o Backend mexe aqui depois de criado
      }

      // Regras para Produtos (Exemplo)
      match /products/{productId} {
        allow read: if true;
        allow write: if isAuthenticated();
      }
      
      // Regras para Ingredientes
      match /ingredients/{ingredientId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Bloqueia todo o resto por seguran√ßa
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
